<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/talaga1"
        android:id="@+id/imageView4"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="147dp"
        app:layout_constraintGuide_percent="0.35766423" />

    <TextView
        android:text="Indonesia :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_indo"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/imageButton6"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="@string/li1"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_isi_indo"
        app:layout_constraintLeft_toLeftOf="@+id/tv_indo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_indo"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Sunda :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sunda"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_isi_indo"
        app:layout_constraintLeft_toLeftOf="@+id/tv_isi_indo"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="@string/ls1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sunda"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sunda"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="@+id/tv_isi_indo" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageButton5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:background="@drawable/ico_right"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton6"
        app:layout_constraintTop_toTopOf="@+id/imageButton6" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:background="@drawable/ico_left"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginTop="16dp" />

</android.support.constraint.ConstraintLayout>